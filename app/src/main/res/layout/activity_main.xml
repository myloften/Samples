<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.loften.samples.MainActivity">


    <Button
        android:id="@+id/myRecyclerView"
        android:onClick="recyclerViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <Button
        android:id="@+id/myDivView"
        android:layout_below="@id/myRecyclerView"
        android:onClick="divViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DivView"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <Button
        android:id="@+id/myRetrofit"
        android:layout_below="@id/myDivView"
        android:onClick="myRetrofitTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <Button
        android:id="@+id/myComponent"
        android:layout_below="@id/myRetrofit"
        android:onClick="myComponentTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Component"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <Button
        android:id="@+id/combinationImage"
        android:layout_below="@id/myComponent"
        android:onClick="combinationImageTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="combinationImage"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <Button
        android:id="@+id/verificationCode"
        android:layout_below="@id/combinationImage"
        android:onClick="verificationCodeTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="verificationCode"
        android:textAllCaps="false"
        android:visibility="visible"/>
</RelativeLayout>
